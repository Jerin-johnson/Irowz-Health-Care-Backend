{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "API (Dev)",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "ts-node-dev",
        "--respawn",
        "--transpile-only",
        "src/server.ts"
      ],
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    }
  ]
}
